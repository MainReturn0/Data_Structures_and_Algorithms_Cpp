#include <iostream>

using namespace std;

int main()
{

    int n = 10829;  // here we are taking a number n
    int digsum = 0; // initially our sum is o.

    while (n > 0) // giving condition that as long as we are more than 0 try it.
    {
        int lastdigit = n % 10;    // getting our last number by using %. % remainder gives us first 9, then 2, 8,0,1
        cout << lastdigit << endl; // printing our first last digit here. without ending line with "".. if we end the line we use endline.
        digsum += lastdigit;       // here we are adding our just gotten digit with 0 from digsum int.
        n = n / 10;                // here we are reducing our  n value to reach 0. as such we already got our value
    }

    cout << "sum = " << digsum << endl;
    return 0;
}

// we  use % to get last digit by %10